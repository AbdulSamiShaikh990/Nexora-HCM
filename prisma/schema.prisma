generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id                    Int                     @id @default(autoincrement())
  email                 String                  @unique
  department            String
  joinDate              DateTime                @default(now())
  certifications        String[]                @default([])
  createdAt             DateTime                @default(now())
  feedback              String?
  firstName             String
  jobTitle              String
  lastName              String
  leaveBalance          Int?                    @default(10)
  location              String?
  performanceRating     Float?
  phone                 String?
  projects              String[]                @default([])
  salary                Float?
  skills                String[]                @default([])
  status                String                  @default("Active")
  updatedAt             DateTime
  attendance            Attendance[]
  attendanceCorrections AttendanceCorrection[]
  AuditLog              AuditLog[]
  Document              Document[]
  leaves                Leave[]
  payrolls              Payroll[]
  payrollRecords        PayrollRecord[]
  performances          Performance[]
  remoteWork            RemoteWorkRequest[]
  tasksAssignedByMe     Task[]                @relation("TaskAssignedBy")
  tasksAssignedToMe     Task[]                @relation("TaskAssignedTo")
}

model Attendance {
  id         Int       @id @default(autoincrement())
  date       DateTime  // Store as date only (UTC midnight)
  checkIn    DateTime? // Nullable if absent
  checkOut   DateTime? // Nullable if absent or not yet checked out
  status     String    // "Present" | "Late" | "Absent"
  employeeId Int
  employee   Employee  @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@unique([employeeId, date])
  @@index([date])
  @@index([employeeId])
}

model AttendanceCorrection {
  id                Int      @id @default(autoincrement())
  employeeId        Int
  date              DateTime
  issue             String
  requestedCheckIn  DateTime?
  requestedCheckOut DateTime?
  note              String?
  state             String   @default("pending") // "pending" | "approved" | "rejected"
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  employee          Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@index([date])
  @@index([employeeId])
  @@index([state])
}

model RemoteWorkRequest {
  id          Int      @id @default(autoincrement())
  employeeId  Int
  startDate   DateTime // Remote work start date
  endDate     DateTime // Remote work end date
  reason      String
  state       String   @default("pending") // "pending" | "approved" | "rejected"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  approvedBy  String?  // Admin email who approved
  approvedAt  DateTime?
  employee    Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@index([employeeId])
  @@index([state])
  @@index([startDate, endDate])
}

model Leave {
  id         Int      @id @default(autoincrement())
  type       String
  startDate  DateTime
  endDate    DateTime
  reason     String?
  status     String   @default("Pending")
  employeeId Int
  employee   Employee @relation(fields: [employeeId], references: [id])
  isPaid     Boolean?
}

model Payroll {
  id         Int      @id @default(autoincrement())
  month      String
  baseSalary Float
  bonuses    Float?
  deductions Float?
  netSalary  Float
  employeeId Int
  employee   Employee @relation(fields: [employeeId], references: [id])
}

model AuditLog {
  id         Int      @id @default(autoincrement())
  action     String
  by         String
  createdAt  DateTime @default(now())
  employeeId Int
  Employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
}

model Document {
  id         Int      @id @default(autoincrement())
  name       String
  type       String
  size       Int
  base64     String?
  uploadedAt DateTime @default(now())
  employeeId Int
  Employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
}

// Auth Models (simplified)
enum Role {
  ADMIN
  EMPLOYEE
}

model User {
  id       String  @id @default(cuid())
  name     String?
  email    String? @unique
  password String?
  role     Role    @default(EMPLOYEE)
}

// Single Performance Management Model
model Performance {
  id          Int      @id @default(autoincrement())
  employeeId  Int
  periodYear  Int      // e.g., 2025
  periodMonth Int      // 1-12
  score       Int      // 0-100 computed performance score
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([employeeId, periodYear, periodMonth])
  @@index([employeeId, periodYear, periodMonth])
}

// Recruitment Models
model Job {
  id                 Int       @id @default(autoincrement())
  title              String
  department         String?
  location           String?
  type               String?
  description        String?
  descriptionRich    String?
  status             String    @default("open")
  expiresAt          DateTime?
  autoTemplate       Boolean   @default(false)
  externalPost       Boolean   @default(false)
  testEnabled        Boolean   @default(false)
  testPassingPercent Int?
  test               Json?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  applications Application[]
}

model Candidate {
  id        Int       @id @default(autoincrement())
  name      String
  email     String?   @unique
  phone     String?
  skills    String[]  @default([])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  applications Application[]
}

model Application {
  id           Int        @id @default(autoincrement())
  jobId        Int
  candidateId  Int
  stage        String
  notes        String?
  scorePercent Int?
  passed       Boolean?
  answers      Json?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  job       Job       @relation(fields: [jobId], references: [id], onDelete: Cascade)
  candidate Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  feedbacks Feedback[]

  @@index([jobId])
  @@index([candidateId])
  @@index([stage])
}

model Feedback {
  id             Int         @id @default(autoincrement())
  applicationId  Int
  by             String
  text           String
  sentimentScore Int?
  sentimentLabel String?
  createdAt      DateTime    @default(now())

  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  @@index([applicationId])
}

model Notification {
  id        Int      @id @default(autoincrement())
  type      String
  payload   Json?
  createdAt DateTime @default(now())
}

// Task Management Model
model Task {
  id             Int       @id @default(autoincrement())
  title          String
  description    String?
  status         String    @default("Pending") // Pending | InProgress | Completed
  priority       String    @default("Medium")  // Low | Medium | High
  dueDate        DateTime
  estimatedHours Float?
  actualHours    Float?    @default(0)
  progress       Float?    @default(0) // 0-100
  tags           String[]  @default([])
  assignedById   Int       // Admin/Manager who created the task
  assignedToId   Int       // Employee who receives the task
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  assignedBy  Employee @relation("TaskAssignedBy", fields: [assignedById], references: [id], onDelete: Cascade)
  assignedTo  Employee @relation("TaskAssignedTo", fields: [assignedToId], references: [id], onDelete: Cascade)

  @@index([assignedById])
  @@index([assignedToId])
  @@index([status])
  @@index([dueDate])
}

/// Normalized Payroll models (added in addition to legacy `Payroll` model)
model PayrollRun {
  id          Int           @id @default(autoincrement())
  periodYear  Int           // e.g., 2025
  periodMonth Int           // 1-12
  status      String        @default("draft") // draft | processing | processed | failed
  currency    String        @default("USD")
  processedAt DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  records     PayrollRecord[]

  @@unique([periodYear, periodMonth])
  @@index([status])
}

model PayrollRecord {
  id          Int       @id @default(autoincrement())
  runId       Int
  employeeId  Int
  department  String?
  baseSalary  Float     // stored in USD baseline
  bonus       Float?
  deductions  Float?
  netPay      Float
  status      String    @default("Pending")
  payDate     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  employee Employee  @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  run      PayrollRun @relation(fields: [runId], references: [id], onDelete: Cascade)

  @@index([employeeId])
  @@index([runId])
  @@index([status])
}
